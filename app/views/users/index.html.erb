<%- model_class = User -%>
<div class="page-header">
  <h1>Список пользователей</h1>
  <% if user_signed_in? %>
    <h2><%= current_user[:username] %> <%= link_to "Выход", destroy_user_session_path, :method =>:delete, :class => 'btn btn-mini btn-danger' %></h2>
  <% else %>
      <%= link_to 'Зарегистрироваться', new_user_registration_path, :class =>'btn btn-mini btn-success' %> или
      <%= link_to 'Войти', new_user_session_path, :class=>'btn btn-mini btn-primary' %>
  <% end %>

</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Имя пользователя</th>
      <th>Email</th>
      <th>Дата создания</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= link_to "Изменить",
                      edit_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to "Удалить",
                      user_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>

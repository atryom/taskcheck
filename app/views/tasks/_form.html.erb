<%= form_for @task, as: :task, url:group_tasks_path(params[:group_id], @task), html: { class:"bs-example form-horizontal"} do |f|%>
    <legend><%= @title %></legend>
    <% if @task.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
            <ul>
                <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

  <div class="form-group">
    <%= f.label :name, style:"display:inline-block",class:"col-lg-1" %>
    <%= f.text_field :name, style:"display:inline-block", class:"col-lg-3" %>
  </div>
  <div class="form-group">
    <%= f.label :note, style:"display:inline-block",class:"col-lg-1"  %>
    <%= f.text_area :note, style:"display:inline-block", class:"col-lg-3" %>
  </div>
  <div class="form-group">
    <%= f.label :status_id, style:"display:inline-block",class:"col-lg-1"  %>
    <%= f.number_field :status_id, style:"display:inline-block", class:"col-lg-3" %>
  </div>
  <div class="form-group">
    <%= f.label :duration, style:"display:inline-block",class:"col-lg-1"  %>
    <%= f.number_field :duration, style:"display:inline-block", class:"col-lg-3" %>
  </div>
  <div class="form-group">
    <%= f.label :deadline, style:"display:inline-block",class:"col-lg-1"  %>
    <%= f.date_select :deadline, style:"display:inline-block", class:"col-lg-1" %>
  </div>
  <div class="actions">
    <%= f.submit "Создать", class:"btn btn-info"%>
  </div>
<% end %>
